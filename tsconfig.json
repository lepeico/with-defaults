{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es5",
		"module": "esnext",
		"lib": ["esnext", "dom"],
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true
	},
	"include": ["**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"],
}
